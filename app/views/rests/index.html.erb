<h1>レストラン検索</h1>

<!--<body>-->
<div class="page-about center">
  周辺のレストラン
</div>
<div class="stores-wrapper flex">
    <ul class="stores">
    <% if @_rests_id  %>
      <nav>
      <%= paginate @some_rests %>
      <% @some_rests.each do |rest_id| %>
        <% @rest = Rest.find(rest_id) %>
        <li class="store-wrapper flex culmn">
        
          <span class="img-wrapper row">
            <!--<img src="<!%= rest["image_url"]["shop_image1"] %>"/>-->
          </span>
          <span class="about-wrapper row">
            <%= link_to "", rest_path(@rest["id"]) %>
            <span><%= @rest["name"] %></span>
            <br>
            <!--<span>現在地から<!%= rest["access"]["walk"] %>分</span>-->
          </span>
        </li>
      <% end %>
      <%= paginate @some_rests %>
      </nav>
      <% else %>
        検索結果がありませんでした
      <% end %>
    </ul>
</div>